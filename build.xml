<project name="jMathPaper" default="dist" basedir=".">
	<description>
		A simple calculation application.
	</description>

	<property name="build" value="build/" />
	<property name="dist" value="dist/" />
	<property name="libs" value="libs/" />
	<property name="src" value="src/" />
	
	<property name="evalex.version" value="1.10" />
	<property name="swt.version" value="4.6.2" />

	<target name="clean" description="Removes the build directories.">
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>

	<target name="init" depends="clean" description="Sets up the build directories.">
		<mkdir dir="${build}" />
		<mkdir dir="${dist}" />
	</target>

	<target name="compile" depends="init" description="Compiles all source files.">
		<javac srcdir="${src}" destdir="${build}" includeantruntime="false" source="1.8">
			<classpath>
				<fileset dir="${libs}" includes="**/*.jar" />
			</classpath>
		</javac>

		<manifest file="MANIFEST.MF">
			<attribute name="Main-Class" value="org.bonsaimind.jmathpaper.Main" />
		</manifest>
	</target>

	<target name="dist" depends="compile" description="Creates the jar and tar archive.">
		<jar jarfile="${dist}/${ant.project.name}-linux.jar" basedir="${build}" manifest="MANIFEST.MF">
			<zipfileset src="${libs}/evalex/EvalEx-${evalex.version}.jar" excludes="META-INF/**/*" />
			<zipfileset src="${libs}/swt/linux/swt-${swt.version}.jar" excludes="META-INF/**/*" />
		</jar>
		<jar jarfile="${dist}/${ant.project.name}-macos.jar" basedir="${build}" manifest="MANIFEST.MF">
			<zipfileset src="${libs}/evalex/EvalEx-${evalex.version}.jar" excludes="META-INF/**/*" />
			<zipfileset src="${libs}/swt/macos/swt-${swt.version}.jar" excludes="META-INF/**/*" />
		</jar>
		<jar jarfile="${dist}/${ant.project.name}-windows.jar" basedir="${build}" manifest="MANIFEST.MF">
			<zipfileset src="${libs}/evalex/EvalEx-${evalex.version}.jar" excludes="META-INF/**/*" />
			<zipfileset src="${libs}/swt/windows/swt-${swt.version}.jar" excludes="META-INF/**/*" />
		</jar>

		<tar destfile="${dist}/${ant.project.name}.tar" basedir=".">
			<include name="${libs}/**/*" />
			<include name="${src}/**/*" />
			<include name="${dist}/${ant.project.name}.jar" />
			<include name="build.xml" />
			<include name="CHANGES" />
			<include name="CONTRIBUTE" />
			<include name="CREDITS" />
			<include name="LICENSE" />
			<include name="README" />
		</tar>
		<bzip2 src="${dist}/${ant.project.name}.tar" destfile="${dist}/${ant.project.name}.tar.bz2" />
	</target>
</project>
